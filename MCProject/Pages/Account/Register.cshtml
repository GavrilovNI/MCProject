@page
@model MCProject.Pages.Account.RegisterModel
@{
}

<div class="container border" style="padding:20px">
	<form method="post">
		<div class="text-danger" asp-validation-summary="ModelOnly" />
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credentials.Email"></label>
			</div>
			<div class="col">
				<input class="form-control" type="email" asp-for="Credentials.Email" />
			</div>
			<span class="text-danger" asp-validation-for="Credentials.Email"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credentials.GameName"></label>
			</div>
			<div class="col">
				<input class="form-control" type="text" asp-for="Credentials.GameName" />
			</div>
			<span class="text-danger" asp-validation-for="Credentials.GameName"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credentials.Password"></label>
			</div>
			<div class="col">
				<input class="form-control" type="password" asp-for="Credentials.Password" />
			</div>
			<span class="text-danger" asp-validation-for="Credentials.Password"></span>
		</div>
		<div class="form-group row">
			<div class="col-2">
				<label asp-for="Credentials.PasswordConfirm"></label>
			</div>
			<div class="col">
				<input class="form-control" type="password" asp-for="Credentials.PasswordConfirm" />
			</div>
			<span class="text-danger" asp-validation-for="Credentials.PasswordConfirm"></span>
		</div>
		@if(Model.Credentials?.Error != null)
		{
			<span class="error text-danger">@Model.Credentials.Error</span>
		}
		<div class="form-group row">
			<div class="col-1">
				<input type="submit" class="btn btn-primary" value="Register" />
			</div>
		</div>
	</form>
</div>
